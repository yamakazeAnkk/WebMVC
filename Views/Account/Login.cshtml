@model ProjectMVC.DTO.LoginDTO

@{
    ViewData["Title"] = "Login";
}
<style>

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1000;
    }
    .modal-overlay .card {
        max-width: 500px;
        width: 100%;
        border-radius: 0.5rem;
    }
</style>

<div class="modal-overlay d-flex justify-content-center align-items-center">
    <div class="card shadow-lg" >
        <div class="card-body">
            <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" placeholder="Enter username" class="form-control form-control-lg" />
                    <span asp-validation-for="Username" placeholder="Username" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" placeholder="Enter password" class="form-control form-control-lg" type="password" />
                    <span asp-validation-for="Password" placeholder="Password" class="text-danger"></span>
                </div>
                
                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                </div>
                <div class="text-center">
                    <a asp-action="Register" class="text-decoration-none">Don't have an account? Register</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 